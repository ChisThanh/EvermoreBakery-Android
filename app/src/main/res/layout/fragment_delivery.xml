<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:background="@color/light_apricot"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:scrollbarSize="0dp"
    android:orientation="vertical"
    tools:context=".Fragment.FragmentDelivery"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/light_apricot"
        tools:context=".Fragment.FragmentDelivery"
        >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:stretchColumns="1"
            android:background="@drawable/custom_radius_fifteen_background_white"
        >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
            >

                <TextView
                    style="@style/TextViewCheckout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order"
                />

                <TextView
                    android:id="@+id/vText_fDelivery_Order"
                    style="@style/TextViewCheckoutSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:text="@string/order_id"
                />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                >

                <TextView
                    style="@style/TextViewCheckout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total"
                />

                <TextView
                    android:id="@+id/vText_fDelivery_Total"
                    style="@style/TextViewCheckoutSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:text="@string/order_money"
                />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
            >

                <TextView
                    style="@style/TextViewCheckout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                />

                <TextView
                    android:id="@+id/vText_fDelivery_Date"
                    style="@style/TextViewCheckoutSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:text="@string/date_sample"
                />

            </TableRow>

        </TableLayout>

        <LinearLayout
            android:id="@+id/lLinear_fDelivery_Receive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_radius_fifteen_background_white"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:orientation="horizontal"
        >

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
            >

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="@string/image"
                    android:scaleType="centerCrop"
                    android:background="@drawable/square_receive"
                    tools:ignore="ImageContrastCheck"
                />

            </androidx.cardview.widget.CardView>

            <TextView
                style="@style/TextViewCheckout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="@string/order_received"
            />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lLinear_fDelivery_Bake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_radius_fifteen_background_white"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:orientation="horizontal"
        >

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
            >

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="@string/image"
                    android:scaleType="centerCrop"
                    android:background="@drawable/square_bake"
                    tools:ignore="ImageContrastCheck"
                />

            </androidx.cardview.widget.CardView>

            <TextView
                style="@style/TextViewCheckout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="@string/order_baked"
            />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lLinear_fDelivery_Deliver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_radius_fifteen_background_white"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:orientation="horizontal"
        >

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
            >

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="@string/image"
                    android:scaleType="centerCrop"
                    android:background="@drawable/square_deliver"
                    tools:ignore="ImageContrastCheck"
                />

            </androidx.cardview.widget.CardView>

            <TextView
                style="@style/TextViewCheckout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="@string/order_delivered"
            />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lLinear_fDelivery_Arrive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_radius_fifteen_background_white"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:orientation="horizontal"
        >

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
            >

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="@string/image"
                    android:scaleType="centerCrop"
                    android:background="@drawable/square_arrive"
                    tools:ignore="ImageContrastCheck"
                />

            </androidx.cardview.widget.CardView>

            <TextView
                style="@style/TextViewCheckout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="@string/order_arrived"
            />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

