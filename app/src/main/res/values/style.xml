<?xml version="1.0" encoding="utf-8"?>

<resources>
    <!--FrameLayout-->
    <style name="FrameLayout">
        <item name="android:background">@drawable/custom_frame_layout</item>
        <item name="android:backgroundTint">@color/desert_sand</item>
        <item name="android:paddingTop">35dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <!--Header Title Text View-->
    <style name="TextViewHeaderTitle">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/floral_white</item>
    </style>

    <!--Header Subtitle Text View-->
    <style name="TextViewHeaderSubtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/floral_white</item>
    </style>

    <!--Title Text View-->
    <style name="TextViewTitle">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/cedar_wood</item>
    </style>

    <!--Medium Text View-->
    <style name="TextViewMedium">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/cedar_wood</item>
    </style>

    <!--Normal Text View-->
    <style name="TextViewNormal">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--Basic Text View-->
    <style name="TextViewBasic">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--Faded Text View-->
    <style name="TextViewFaded">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <!--Recommendation Text View-->
    <style name="TextViewRecommendation">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/potters_clay</item>
    </style>

    <!--Annotation Text View-->
    <style name="TextViewAnnotation">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/error_red</item>
    </style>

    <!--Hyperlink Text View-->
    <style name="TextViewHyperlink">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/hyperlink_blue</item>
    </style>

    <!--Open Text View-->
    <style name="TextViewOpen">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/floral_white</item>
    </style>

    <!--Category Text View-->
    <style name="TextViewCategory">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/floral_white</item>
    </style>

    <!--Display Title Text View-->
    <style name="TextViewDisplayTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/cedar_wood</item>
    </style>

    <!--Display Subtitle Text View-->
    <style name="TextViewDisplaySubtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/cedar_wood</item>
    </style>

    <!--Edit Text-->
    <style name="EditText">
        <item name="android:background">@drawable/custom_edit_text</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableTint">@color/gray</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!--Spinner-->
    <style name="Spinner">
        <item name="android:background">@drawable/custom_spinner</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!--Spinner Text View-->
    <style name="TextViewSpinner">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!--Primary Button-->
    <style name="ButtonPrimary">
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:backgroundTint">@color/cedar_wood</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/floral_white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--Secondary Button-->
    <style name="ButtonSecondary">
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:backgroundTint">@color/faded_orange</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--Open Button-->
    <style name="ButtonOpen">
        <item name="android:background">@drawable/custom_progress_bar</item>
        <item name="android:backgroundTint">@color/sandstorm</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/floral_white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <!--Icon Button-->
    <style name="ButtonIcon">
        <item name="android:background">@drawable/custom_button_icon</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/cedar_wood</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">60dp</item>
        <item name="android:paddingEnd">60dp</item>
        <item name="android:drawablePadding">50dp</item>
        <item name="android:drawableTint">@color/cedar_wood</item>
    </style>

    <!--Value Button-->
    <style name="ButtonValue">
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:backgroundTint">@color/cedar_wood</item>
        <item name="android:textColor">@color/floral_white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <!--CheckBox Bar-->
    <style name="CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/custom_checkbox</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--Progress Bar-->
    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/custom_progress_bar</item>
        <item name="android:progressTint">@color/sandstorm</item>
        <item name="android:progressBackgroundTint">@color/floral_white</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:maxHeight">50dp</item>
        <item name="android:indeterminateOnly">false</item>
    </style>

    <!--Bottom Navigation View-->
    <style name="BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@color/rust_brown</item>
        <item name="itemTextColor">@color/rust_brown</item>
        <item name="android:background">@color/floral_white</item>
    </style>

    <!--Bottom Navigation View Text Appearance-->
    <style name="BottomNavigationView.TextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/rust_brown</item>
    </style>

    <!--Popup Menu-->
    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:itemBackground">@drawable/custom_popup_menu_item</item>
        <item name="android:textColor">@color/rust_brown</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Rating Bar-->
    <style name="RatingBar">
        <item name="android:numStars">5</item>
        <item name="android:rating">3.5</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:progressTint">@color/canary_yellow</item>
        <item name="android:progressBackgroundTint">@color/cedar_wood</item>
        <item name="android:secondaryProgressTint">@color/canary_yellow</item>
        <item name="android:scaleX">0.7</item>
        <item name="android:scaleY">0.7</item>
        <item name="android:transformPivotX">120dp</item>
        <item name="android:transformPivotY">0dp</item>
        <item name="android:isIndicator">true</item>
    </style>
</resources>