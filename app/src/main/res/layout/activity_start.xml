<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/portrait_bread"
    android:orientation="vertical"
    tools:context=".Activity.ActivityStart"
>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/image"
        app:srcCompat="@drawable/square_logo"
    />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
    >

        <TextView
            android:id="@+id/vText_aStart_Quote"
            style="@style/TextViewOpen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="@string/open_quote"
        />

        <ProgressBar
            android:id="@+id/uProgress_aStart_ProgressBar"
            style="@style/ProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vText_aStart_Quote"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:visibility="visible"
        />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/uButton_aStart_Continue"
            style="@style/ButtonOpen"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/vText_aStart_Quote"
            android:layout_margin="20dp"
            android:text="@string/s_continue"
            tools:ignore="VisualLintButtonSize"
        />

        <FrameLayout
            android:id="@+id/lFrame_aStart_Layout"
            style="@style/FrameLayout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        />

    </RelativeLayout>
    

</LinearLayout>